{
    "name": "@buildingai/buildingai-ui",
    "private": true,
    "packageManager": "pnpm@10.0.0",
    "type": "module",
    "license": "MIT",
    "scripts": {
        "prebuild:ssr": "pnpm run lint && pnpm run typecheck",
        "postinstall": "NUXT_BUILD_SSR=true NUXT_BUILD_ENV=development nuxt prepare --dotenv ../../../.env",
        "build:ssr": "cross-env NODE_OPTIONS=--max-old-space-size=8192 NUXT_BUILD_SSR=true NUXT_BUILD_ENV=production nuxt build --dotenv ../../../.env && cross-env NUXT_BUILD_SSR=true node ../../../scripts/release.mjs",
        "generate": "cross-env NODE_OPTIONS=--max-old-space-size=8192 NUXT_BUILD_SSR=false NUXT_BUILD_ENV=production nuxt generate --dotenv ../../../.env && cross-env NUXT_BUILD_SSR=false node ../../../scripts/release.mjs",
        "dev": "NUXT_BUILD_SSR=false NUXT_BUILD_ENV=development nuxt dev --no-clear --dotenv ../../../.env",
        "start:ssr": "node .output/server/index.mjs",
        "start": "npx serve .output/public",
        "lint": "eslint . --quiet",
        "lint:fix": "eslint . --fix",
        "typecheck": "vue-tsc --noEmit --strict",
        "i18n:translate": "node ../../../scripts/translate-i18n.mjs",
        "format": "prettier --write \"**/*.{js,ts,tsx,vue,json,css,scss,md}\" && pnpm run lint:fix",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build"
    },
    "dependencies": {
        "@buildingai/constants": "workspace:*",
        "@buildingai/designer": "workspace:*",
        "@buildingai/hooks": "workspace:*",
        "@buildingai/http": "workspace:*",
        "@buildingai/i18n-config": "workspace:*",
        "@buildingai/layouts": "workspace:*",
        "@buildingai/service": "workspace:*",
        "@buildingai/stores": "workspace:*",
        "@buildingai/storybook": "workspace:*",
        "@buildingai/ui": "workspace:*",
        "@buildingai/upload": "workspace:*",
        "@buildingai/utils": "workspace:*",
        "@storybook-vue/nuxt": "^9.0.1",
        "@tanstack/table-core": "^8.21.3",
        "echarts": "catalog:web",
        "libphonenumber-js": "^1.12.18",
        "nuxt-svgo": "catalog:web",
        "qrcode.vue": "^3.6.0",
        "reka-ui": "catalog:web",
        "vue-drag-resize": "^2.0.3",
        "vue-i18n": "catalog:web",
        "vuedraggable": "catalog:web"
    },
    "devDependencies": {
        "@buildingai/eslint-config": "workspace:*",
        "@buildingai/nuxt": "workspace:*",
        "@buildingai/types": "workspace:*",
        "@buildingai/web-config": "workspace:*",
        "@chromatic-com/storybook": "^4.1.1",
        "@storybook/addon-docs": "^9.1.8",
        "eslint-plugin-storybook": "^9.1.8",
        "storybook": "^9.1.8"
    },
    "engines": {
        "node": ">=22.20.x"
    }
}
